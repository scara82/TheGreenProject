  <section class="module content">
    <div onclick="location.href='/tests/self_test'" class='content test personal'>
      <h2>Test your selfcare</h2>
      <%= form_tag("/tests", method: "post") do %>
        <h2>Q1: How many shower a day?</h2>
          <%= radio_button_tag(:q1, "1") %>
          <%= label_tag(:q1, "Once a day") %>
          <br>
          <%= radio_button_tag(:q1, "2") %>
          <%= label_tag(:q1, "Twice a day") %>
          <br>
          <%= radio_button_tag(:q1, "3") %>
          <%= label_tag(:q1, "Three times a day") %>
          <br>
          <br>

          <h2>Q2: When you clean your teeth, do you let the water run?</h2>
            <%= radio_button_tag(:q2, "1") %>
            <%= label_tag(:q2, "Not") %>
            <br>
            <%= radio_button_tag(:q2, "2") %>
            <%= label_tag(:q2, "Yes") %>
            <br>
            <br>

          <h2>Q3: How many times do you re-use the plastic bags shops give you?</h2>
            <%= radio_button_tag(:q3, "1") %>
            <%= label_tag(:q3, "Once, maybe") %>
            <br>
            <%= radio_button_tag(:q3, "2") %>
            <%= label_tag(:q3, "Several times") %>
            <br>
            <%= radio_button_tag(:q3, "3") %>
            <%= label_tag(:q3, " I never take them; I always use my own bag.") %>
            <br>
        <%= submit_tag("Submit") %>
      <% end %>
    </div>
  </section>

